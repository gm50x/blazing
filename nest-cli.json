{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/fiap-burger-items/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/fiap-burger-items/tsconfig.app.json"
  },
  "projects": {
    "ignited": {
      "type": "library",
      "root": "libs/ignited",
      "entryFile": "index",
      "sourceRoot": "libs/ignited/src",
      "compilerOptions": {
        "tsConfigPath": "libs/ignited/tsconfig.lib.json"
      }
    },
    "fiap-burger-items": {
      "type": "application",
      "root": "apps/fiap-burger-items",
      "entryFile": "main",
      "sourceRoot": "apps/fiap-burger-items/src",
      "compilerOptions": {
        "tsConfigPath": "apps/fiap-burger-items/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/fiap-burger-items"
}